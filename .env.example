# Application Settings
APP_NAME=Verity
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
API_KEY_HEADER=X-API-Key
SECRET_KEY=your-secret-key-here-change-in-production

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://verity:verity@localhost:5432/verity
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# File Upload
MAX_UPLOAD_SIZE_MB=500
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp,tiff,heic
ALLOWED_VIDEO_FORMATS=mp4,mov,avi,mkv,webm
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# Storage
STORAGE_BACKEND=local
# For S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=verity-storage
# For GCP
GCP_PROJECT_ID=
GCP_BUCKET_NAME=verity-storage

# Content Retention
DEFAULT_FILE_RETENTION_HOURS=24
DEFAULT_RESULT_RETENTION_DAYS=90

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# C2PA Verification
C2PA_TRUST_ANCHORS_PATH=./config/trust_anchors
C2PA_VERIFY_CERTIFICATES=true

# ML Models
ML_MODEL_DIR=./models
ML_DEVICE=cpu
ML_BATCH_SIZE=8
ML_NUM_WORKERS=4
HUGGINGFACE_CACHE_DIR=./cache/huggingface

# External Services
REVERSE_IMAGE_SEARCH_API_KEY=
GOOGLE_VISION_API_KEY=

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Security
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000"]
API_KEY_EXPIRY_DAYS=365
ENABLE_API_KEY_ROTATION=true

# Webhooks
WEBHOOK_TIMEOUT_SECONDS=30
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY_SECONDS=60
